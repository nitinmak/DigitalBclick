<?xml version='1.0' encoding='utf-8'?>
<widget id="card.digitalcard.com" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
<!--         <icon src="icon/icon.png"  width="57" height="57" density="mdpi" /> -->
            <icon src="icon/icon.png" />


    <name>digitalcard</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
  
        <allow-intent href="market:*" />
        <uses-permission android-targetSdkVersion="28" android-name="android.permission.READ_CONTACTS" />
        <uses-permission android-targetSdkVersion="28" android-name="android.permission.WRITE_CONTACTS" />
        <icon background="icon/icon.png" foreground="icon/icon.png" />
  
    </platform>

    <!-- <preference name="android-minSdkVersion" value="16" />  -->
        <preference name="android-targetSdkVersion" value="28" />
         <!-- <preference name="android-targetSdkVersion" value="21" /> -->
    <preference name="android-maxSdkVersion" value="28" />
    <platform name="ios">
            <preference name="target-device" value="handset" />
        <icon src="icon/ios/Icon-App-20x20@1x.png" width="20" height="20" />
        <icon src="icon/ios/Icon-App-20x20@2x.png" width="40" height="40" />
        <icon src="icon/ios/Icon-App-20x20@3x.png" width="60" height="60" />

        <icon src="icon/ios/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="icon/ios/Icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="icon/ios/Icon-App-29x29@3x.png" width="87" height="87" />
        
        <icon src="icon/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="icon/ios/Icon-App-40x40@2x.png" width="80" height="80" />
        <icon src="icon/ios/Icon-App-40x40@3x.png" width="120" height="120" />

        <icon src="icon/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <icon src="icon/ios/Icon-App-60x60@3x.png" width="180" height="180" />
        
        <icon src="icon/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="icon/ios/Icon-App-76x76@2x.png" width="156" height="156" />
        <!-- iOS 7.0+ -->
        <icon src="icon/icon.png" platform="ios" width="1024" height="1024"/>
<!--         <icon src="icon/Icon-App-512@2x.png" platform="ios" width="1024" height="1024" /> -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icon/icon.png" width="1024" height="1024" />
        <icon src="ios/icon-512-2x.png" width="1024" height="1024" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />

        <!-- iPhone and iPod touch -->

<splash src="icon/icon.png"  width="1024" height="1024" />

<!-- Retina iPad -->

<!-- <splash src="icon/icon.png"  width="2048" height="1536" /> -->

    </platform>
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />  
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
    <plugin name="cordova-plugin-android-permissions" spec="1.0.0" />
        <plugin name="cordova-plugin-console" spec="1.0.7" />
        <plugin name="cordova-plugin-contacts" spec="1.0.0" />
        <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3" />
        <plugin name="cordova-plugin-statusbar" spec="1.0.1" />
        <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <preference name="fullscreen" value="false" />
    
    <gap:plugin name="phonegap-plugin-barcodescanner" source="npm" />

    <preference name="android-build-tool" value="gradle" />

    <config-file  target="*-Info.plist" parent="NSCameraUsageDescription">
        <string>It is used for scaning QR code.</string>
    </config-file>

    <edit-config  target="*-Info.plist" parent="NSCameraUsageDescription" mode="merge">
        <string>It is used for  take aphoto for user profile.</string>
    </edit-config>
    
<config-file platform="ios" target="*-Info.plist" parent="NSContactsUsageDescription">
        <string>It is used for pick contact To share Id</string>
    </config-file>

    <config-file  target="*-Info.plist" parent="NSPhotoLibraryUsageDescription">
        <string>It is used for Pick photo to set user profile</string>
    </config-file>

    <edit-config  target="*-Info.plist" parent="NSPhotoLibraryUsageDescription" mode="merge">
        <string>It is used for Pick photo to set user profile</string>
    </edit-config>
</widget>
